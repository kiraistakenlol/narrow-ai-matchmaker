# Participant Creation Flow
direction: down

# Define styles
styles: {
  doc:  { shape: rectangle; style: { fill: "#f5f5f5"; stroke: "#333"; border-radius: 5 } }
  llm:  { shape: rectangle; style: { fill: "#e8f5e9"; stroke: "#388e3c"; border-radius: 5 } }
  db:   { shape: cylinder;  style: { fill: "#fff2cc"; stroke: "#d6b656" } }
}

# Define components
GeneralDesc: { class: doc; label: 'General User Description (Natural Language)' }
EventInfo:   { class: doc; label: 'Event-Specific Goals & Context' }
LLMBlend:   { class: llm; label: 'LLM Blend: General + Event Info' }
ParticipantDesc: { class: doc; label: 'Participant Description (Natural Language)' }
VectorStore:    { class: db;  label: 'Store Event-Specific Vector in Qdrant' }

# Define flow
GeneralDesc -> LLMBlend
EventInfo   -> LLMBlend
LLMBlend    -> ParticipantDesc
ParticipantDesc -> VectorStore

# Explanatory note
Note: |md
  Participant entity is created by blending general user description
  with event-specific context via LLM, then storing its vector in Qdrant.
|
Note.style: { fill: "#f5f5f5"; stroke: "#333"; border-radius: 5 } 