{
  "version": "0.2.0",
  "configurations": [
    {
      "type": "node",
      "request": "launch",
      "name": "Run Backend (npm run dev)",
      "runtimeExecutable": "npm",
      "runtimeArgs": [
        "run",
        "dev"
      ],
      "cwd": "${workspaceFolder}/application/packages/backend",
      "console": "integratedTerminal"
    },
    {
      "type": "node",
      "request": "launch",
      "name": "Run Frontend (npm run dev)",
      "runtimeExecutable": "npm",
      "runtimeArgs": [
        "run",
        "dev"
      ],
      "cwd": "${workspaceFolder}/application/packages/frontend",
      "console": "integratedTerminal",
      "serverReadyAction": {
        "pattern": "Local:\\s+(https?://localhost:[0-9]+)",
        "uriFormat": "%s",
        "action": "openExternally"
      }
    },
    {
      "type": "node",
      "request": "launch",
      "name": "Run Docker Compose",
      "runtimeExecutable": "docker-compose",
      "runtimeArgs": [
        "-f",
        "${workspaceFolder}/application/packages/backend/docker-compose.yml",
        "up",
        "--build"
      ],
      "cwd": "${workspaceFolder}/application/packages/backend",
      "console": "integratedTerminal"
    }
  ],
  "compounds": [
    {
      "name": "Run Full Stack",
      "configurations": ["Run Docker Compose", "Run Backend (npm run dev)", "Run Frontend (npm run dev)"]
    }
  ]
} 